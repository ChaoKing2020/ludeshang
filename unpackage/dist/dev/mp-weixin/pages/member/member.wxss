.status_bar {
  height: calc(25px);
  width: 100%;
  background-color: #b50e03;
}
.content {
  box-sizing: border-box;
  width: 100%;
  padding: 20rpx 30rpx;
  background-color: #f8f8f8;
  height: 100vh;
}
.school_item {
  background-color: #fff;
  display: flex;
  width: 100%;
  height: 200rpx;
  align-items: center;
  border-radius: 20rpx;
}
.school_item .it {
  width: 100%;
  height: 100%;
  display: flex;
  padding: 32rpx 32rpx;
  box-sizing: border-box;
}
.school_item .it .school_item_l {
  position: relative;
  height: 120rpx;
  width: 120rpx;
  margin-right: 32rpx;
}
.school_item .it .school_item_l .img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}
.school_item .it .school_item_l image {
  width: 120rpx;
  height: 120rpx;
}
.school_item .it .school_item_r .school_item_r_top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.school_item .it .school_item_r .school_item_r_top .name {
  line-height: 50rpx;
  font-weight: 500;
  font-size: 36rpx;
  color: #333;
  letter-spacing: -0.62px;
  width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.school_item .it .school_item_r .school_item_r_top .address {
  color: rgba(39, 40, 50, 0.4);
  font-size: 24rpx;
}
.school_item .it .school_item_r .school_item_r_top .huiyuan {
  margin-right: 60rpx;
  color: #afafaf;
  font-weight: 600;
}
.school_item .it .school_item_r .school_item_r_top .VIPhuiyuan {
  margin-right: 60rpx;
  color: #b50e03;
  font-weight: 600;
}
.school_item .it .school_item_r .school_item_r_bottom {
  margin-top: 10rpx;
  font-size: 24rpx;
  width: 542rpx;
  color: #999;
}
.school_item .it .school_item_r .school_item_r_bottom text {
  margin-right: 10rpx;
}
.school_item .login_btn {
  margin-left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  background-color: #fff;
  box-sizing: border-box;
  border: 6rpx solid #b50e03;
  border-radius: 20rpx;
  color: #b50e03;
  text-align: center;
  font-size: 36rpx;
  padding: 20rpx 40rpx;
}
.main {
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 0 32rpx;
}
.main view {
  height: 88rpx;
  width: 100%;
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgba(39, 40, 50, 0.1);
}
.main view text {
  color: #f87869;
  font-size: 40rpx;
  margin-right: 20rpx;
}
.main view:last-child {
  border-bottom: none;
}

